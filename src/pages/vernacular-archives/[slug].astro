---
import RegionalArchive from "@components/astro/RegionalArchive.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const regionalLanguages = await getCollection("regional-archives-languages");

  return regionalLanguages.map((language) => {
    return {
      params: {
        slug: language.id,
      },
      props: {
        languageId: language.id,
      },
    };
  });
}

const { languageId } = Astro.props;
---

<RegionalArchive languageId={languageId} />
