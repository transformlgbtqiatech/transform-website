---
type Props = Omit<astroHTML.JSX.TextareaHTMLAttributes, "class"> & {
  nameAndId: string;
};

const { nameAndId, id, ...rest } = Astro.props;
---

<textarea
  transition:persist
  name={nameAndId ?? id}
  id={nameAndId ?? id}
  class="bg-white border-[1px] border-zinc-400 rounded-md py-2 px-3 leading-6 text-zinc-700 font-medium w-full placeholder:text-zinc-400 placeholder:font-normal"
  rows="5"
  {...rest}></textarea>
